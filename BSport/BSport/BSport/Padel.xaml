<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BSport.Padel">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.2*"/>
                </Grid.RowDefinitions>
            <Button Text="NickName"/>
            <Label Text="1200 Gold II" VerticalOptions="Start" Grid.Column="1"/>
            <Button Text="Hola" Grid.Column="2"/>
            </Grid>
            <!--Aquí irá la lista personalizada, de tenerla-->
            <ListView/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>